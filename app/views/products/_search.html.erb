<%= form_with(url: search_path, local: true, method: "get", class: 'search-form') do %>
  <div class="file-field input-field">
    <div>
      <%= submit_tag("Search", class: "btn green lighten-1") %>
    </div>
    <div class="file-path-wrapper">
      <%= text_field_tag(:search_term, nil, class: 'input', placeholder: 'Search Products') %>
      <%= select_tag "search_id", options_from_collection_for_select(Category.where.not(parent_category_id: nil).order(:name), "id", "name"), prompt: "Filter By Category" %>
    </div>
  </div>
<% end %>

